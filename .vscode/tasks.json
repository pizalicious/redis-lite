{
    "version": "2.0.0",
    "tasks": [
        // ===== C++ Tasks =====
        {
            "label": "Build Redis-lite Server",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++17",
                "-Wall",
                "-Wextra",
                "-g",
                "${workspaceFolder}/server/main.cpp",
                "-o",
                "${workspaceFolder}/server/redis-lite"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        // ===== Python Tasks =====
        {
            "label": "Run Python Client",
            "type": "shell",
            "command": "source ${workspaceFolder}/venv/bin/activate && python ${workspaceFolder}/client/redis_client.py",
            "group": {
                "kind": "test",
                "isDefault": false
            },
            "problemMatcher": []
        },
        {
            "label": "Run Python Tests",
            "type": "shell",
            "command": "source ${workspaceFolder}/venv/bin/activate && pytest tests/ -v",
            "group": {
                "kind": "test",
                "isDefault": false
            },
            "problemMatcher": []
        },
        {
            "label": "Run Benchmark",
            "type": "shell",
            "command": "source ${workspaceFolder}/venv/bin/activate && python ${workspaceFolder}/client/benchmark.py",
            "problemMatcher": []
        },
        {
            "label": "Format Python Code",
            "type": "shell",
            "command": "source ${workspaceFolder}/venv/bin/activate && black client/ tests/",
            "problemMatcher": []
        },
        {
            "label": "Lint Python Code",
            "type": "shell",
            "command": "source ${workspaceFolder}/venv/bin/activate && ruff check client/ tests/",
            "problemMatcher": []
        },
    ]
}
